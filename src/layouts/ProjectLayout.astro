---
import BaseLayout from "./BaseLayout.astro";

export interface Props {
    title: string;
    description: string;
    heroImage: string;
    githubUrl?: string;
    projectUrl?: string;
    badge?: string;
}

const { title, description, heroImage, badge, githubUrl, projectUrl} = Astro.props;
import { Image } from "astro:assets";
---

<BaseLayout title={title} description={description} image={heroImage}, ogType="article">
  <main class="md:flex md:justify-center">
    <article class="prose prose-lg max-w-[750px] prose-img:mx-auto">
      {heroImage && <Image width={750} height={422} format="webp" src={heroImage} alt={title} class="w-full mb-6" />}
      <h1 class="title my-2 text-4xl font-bold">{title}</h1>
      <br />
      {badge && <div class="badge badge-secondary my-1">{badge}</div>}
        {githubUrl && <button class="btn"><a class="no-underline" href={githubUrl}>Github Url</a></button>}
        {projectUrl && <button class="ml-4 btn btn-primary"><a class="text-white no-underline" href={projectUrl}>Live Url</a></button>}

      <div class="divider my-2"></div>
      <slot />
    </article>
  </main>
</BaseLayout>
